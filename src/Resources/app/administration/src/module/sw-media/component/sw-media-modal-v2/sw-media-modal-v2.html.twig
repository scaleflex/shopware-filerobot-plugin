{% block sw_media_modal_v2_tab_items %}
    {% parent %}
    <sw-tabs-item
            :name="tabFilerobotDAM"
            :active-tab="active"
    >
        Filerobot DAM
    </sw-tabs-item>
{% endblock %}

{% block sw_media_modal_v2_tab_content_library %}
    {% parent %}
    <template v-if="active === tabFilerobotDAM">
        {% block sw_filerobot_modal_media_library %}
            <sw-upload-listener
                    :upload-tag="uploadTag"
                    @media-upload-add="onUploadsAdded"
                    @media-upload-finish="onUploadFinished"
                    @media-upload-fail="onUploadFailed"
            />

            <sw-filerobot-library
                    ref="filerobotLibrary"
                    :selection="selection"
                    :upload-tag="uploadTag"
                    @media-selection-change="selection = $event"/>
        {% endblock %}
    </template>
{% endblock %}
